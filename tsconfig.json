{
  "compilerOptions": {
    "target": "ESNext",
    "module": "UMD",
    "lib": [
      "ESNext",
      "dom"
    ],
    "noEmit": false,
    "outDir": "dist",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true, 
    "strictNullChecks": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true,
  },
  "exclude": ["examples"]
}